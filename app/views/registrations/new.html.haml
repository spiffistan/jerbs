-# TODO split into two views?

- if job_seeker?
  %h2= t 'register.job_seeker.title'
- else
  %h2= t 'register.employer.title'

= form_for(resource, :as => resource_name,
  :url => registration_path(resource_name),
  :html => {:class => "new_user form-horizontal"}) do |f|

  = devise_error_messages!
  .control-group
    = f.label :email, :class => "control-label"
    .controls
      = f.email_field :email
      %p.help-block Du bruker epost-adressen for å logge deg inn
  .control-group
    = f.label :password
    .controls
      = f.password_field :password
  .control-group
    = f.label :password_confirmation
    .controls
      = f.password_field :password_confirmation



  - if not job_seeker?
    = fields_for(resource.rolable) do |r|
      -# Set rolable type from params
      = r.hidden_field :rolable_type, :value => resource.rolable_type
      .control-group
        = r.label (t 'register.employer.contact_name')
        .controls
          = r.text_field :name
          %p.help-block Navnet på firmaets kontaktperson

      = fields_for(resource.rolable.company) do |c|
        .control-group
          = c.label (t 'register.employer.company_name')
          .controls
            = c.text_field :name
            %p.help-block 
              Tips: Bruk samme navn som firmaet er registrert med.
              %br/
              F.eks: Statoil ASA eller Tine SA

  .form-actions
    = f.submit (t 'register.submit'), :class => 'btn btn-primary btn-large'

= render "/devise/links"
- if job_seeker?
  %a{:href => '#'} Er du arbeidsgiver?
