%h2= t 'login.title'

= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name),
  :html => {:class => "form-horizontal"}) do |f|
  = f.input :email
  = f.input :password
  - if devise_mapping.rememberable?
    = f.input :remember_me, :as => :boolean
  = f.actions do
    = f.action :submit, :button_html => { :value => 'Logg inn', :class => 'btn-primary btn-large' }

= render "links"
